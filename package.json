    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite": "^7.1.9",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix --max-warnings=0"
    ],
    "**/*.{js,jsx}": [
      "prettier --write"
    ],
    "**/*.{css,md,mdx,json}": [
      "prettier --write"
    ]
  }
